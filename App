<script>
const video = document.getElementById('bgVideo');
const mainMenuUI = document.getElementById('mainMenuUI');
const settingsModal = document.getElementById('settingsModal');
const barFill = document.getElementById('barFill');
const statsText = document.getElementById('statsText');
const loadingOverlay = document.getElementById('loadingOverlay');
const touchSound = new Audio("https://www.dropbox.com/scl/fi/wbhg5jqx3spvjxhxkozk9/Fap-geme-touch-effect-sonde.ogg?rlkey=ep18ldhl31olj2zx2anizoper&st=20ljm1li&dl=1");

let currentVolume = 1.0;
let isLoaded = false;

// يبدأ التحميل تلقائياً عند فتح الصفحة
function startFakeLoading() {
    let p = 0;
    let inv = setInterval(() => {
        p += 1;
        barFill.style.width = p + '%';
        statsText.innerText = `Loading Game... ${p}%`;
        if(p >= 100) {
            clearInterval(inv);
            document.getElementById('loadingInfo').style.display = 'none';
            document.getElementById('tapToStart').style.display = 'block';
            isLoaded = true; // الآن يمكن للمستخدم الضغط للدخول
        }
    }, 30);
}

function startMenu() {
    if(!isLoaded) return; // منع الدخول قبل اكتمال الـ 100%
    
    playTouch();
    loadingOverlay.style.opacity = '0';
    setTimeout(() => {
        loadingOverlay.style.display = 'none';
        video.style.opacity = '1';
        mainMenuUI.style.opacity = '1';
        video.volume = currentVolume;
        video.play().catch(e => {
            console.log("Video play failed:", e);
        });
    }, 800);
}

function toggleSettings(show) {
    playTouch();
    settingsModal.style.display = show ? 'flex' : 'none';
}

function changeVolume(val) {
    currentVolume = val;
    video.volume = currentVolume;
    touchSound.volume = currentVolume;
}

function playTouch() {
  touchSound.currentTime = 0;
  touchSound.volume = currentVolume;
  touchSound.play().catch(e => {});
}

function exitPage() {
    playTouch();
    setTimeout(() => {
        window.close();
        history.back();
    }, 200);
}

function goToPath(path) {
  playTouch();
  setTimeout(() => { window.location.href = path; }, 150);
}

function resize(){
  const baseW=720, baseH=1280;
  const scale=Math.max(window.innerWidth/baseW, window.innerHeight/baseH);
  document.getElementById("wrapper").style.transform=`scale(${scale})`;
}

window.addEventListener("resize", resize);
window.onload = () => { 
    resize(); 
    startFakeLoading(); 
    document.getElementById('volRange').value = 1;
};
</script>

